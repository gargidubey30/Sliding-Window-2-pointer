class Solution {
public:
    int longestOnes(vector<int>& nums, int k) {

        int n=nums.size();
        int maxlen=0;
        for(int i=0; i<n; i++){
           int cnt=0;
            for(int j=i; j<n; j++){
                if(nums[j]==0) cnt++;

                if(cnt<=k){
                     int len=j-i+1;
                maxlen=max(len,maxlen);

                }
                else break;
              
            }

        }
        return maxlen;
        
    }
};
